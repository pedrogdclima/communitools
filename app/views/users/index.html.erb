<div class="row align-items-center justify-content-between mb-3">
  <h1 class="col-4"><%= current_user.name %></h2>
  <%= link_to 'Edit', "/users/edit", class: "col-1 btn btn-outline-light" %>
</div>
<div class="row mb-3">
  <div class="col-4"><%= current_user.username %></div>
</div>
<div class="row mb-3">
  <div class="col-4"><%= current_user.email %></div>
</div>
<div class="row mb-3">
  <div class="col-4"><%= current_user.latlng || "No location" %></div>
</div>
<div class="row mb-3">
  <div class="col-4">You have <%= current_user.tools.size %> <a href="/tools">tools</a></div>
  </div>
</div>
